{
  "name": "catpaw/starter",
  "type": "project",
  "description": "A php CatPaw cli user interface",
  "homepage": "https://github.com/tncrazvan/catpaw-cli",
  "license": "MIT",
  "scripts": {
    "load": "XDEBUG_MODE='off' composer dump-autoload -o",
    "fix": [
      "XDEBUG_MODE='off' php ./vendor/bin/php-cs-fixer fix src",
      "XDEBUG_MODE='off' php ./vendor/bin/php-cs-fixer fix tests"
    ],
    "action:test": "XDEBUG_MODE='off' php vendor/bin/phpunit tests",
    "test": "XDEBUG_MODE='debug' php vendor/bin/phpunit tests",
    "start": "XDEBUG_MODE='debug' php ./bin/start -esrc/main.php -lsrc/lib/ -i",
    "watch": "XDEBUG_MODE='debug' php ./bin/start -esrc/main.php -lsrc/lib/ -i -w"
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com",
      "homepage": "https://github.com/tncrazvan",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "CatPaw\\CUI\\": "src/lib/"
    },
    "files": [
      "src/lib/functions.php",
      "src/lib/Colors/functions.php",
      "src/lib/Components/functions.php",
      "src/lib/Shapes/functions.php"
    ]
  },
  "require": {
    "php": "^8.1",
    "catpaw/core": "^1.3",
    "amphp/amp": "^2.6",
    "amphp/file": "^2.0"
  },
  "autoload-dev": {
    "Tests\\": "tests/"
  },
  "require-dev":{
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9",
    "vimeo/psalm": "^4.23"
  },
  "config": {
    "preferred-install": "dist",
    "process-timeout": 0
  }
}
